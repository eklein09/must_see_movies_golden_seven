<div class="container">

  <div class="page-header">
    <h1>Edit Actor</h1>
  </div>

</div>

<form action="/actors/<%= @current_actor.id %>/edit_row">
  <div class="form-group">
    <label for="dob">DOB</label>
    <input type="text" class="form-control" id="dob" name="dob" value="<%= @current_actor.dob %>">
  </div>

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="<%= @current_actor.name %>">
  </div>

  <div class="form-group">
    <label for="bio">Duration</label>
    <input type="text" class="form-control" id="bio" name="bio" value="<%= @current_actor.bio %>">
  </div>

  <div class="form-group">
    <label for="image_url">Image_URL</label>
    <input type="url" class="form-control" id="image_url" name="image_url" value="<%= @current_actor.image_url %>">
  </div>


  <button type="submit" class="btn btn-default">Update Actor</button>
</form>
