<a href="/actors/">Actors</a>

<h1> Movie #<%= @current_actor.id %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-11">



      <dl class="dl-horizontal">
        <dt>DOB</dt>
        <dd><%= @current_actor.dob %></dd>
        <dt>Name</dt>
        <dd><%= @current_actor.name %></dd>
        <dt>Bio</dt>
        <dd><%= @current_actor.bio %></dd>
        <dt>Image</dt>
        <dd><img src="<%= @current_actor.image_url %>" class="img-responsive" alt="Actor Image"></dd>
      </dl>

    </div>
  </div>
</div>

