<h1>MovieDB</h1>

<a href="/directors/">Directors</a>
<a href="/movies/">Movies</a>
<a href="/actors/">Actors</a>



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Actors</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a href="/actors/new_form">Add a New Actor</a>
        </div>
    </div>



    <div class="row">
        <div class="col-md-2">
            Image
        </div>
        <div class="col-md-1">
            DOB
        </div>
        <div class="col-md-1">
            Name
        </div>
        <div class="col-md-6">
            Bio
        </div>
        <div class="col-md-1">

        </div>
    </div>
    <% @list_of_actors.each do |actor| %>
    <div class="row">
        <div class="col-md-2">
            <img src="<%= actor.image_url %>" class="img-responsive" alt="Movie Image">
        </div>
        <div class="col-md-1">
            <%= actor.dob %>
        </div>
        <div class="col-md-1"><%= actor.name %></div>
        <div class="col-md-6"><%= actor.bio %></div>
        <div class="col-md-1">
            <a href="/actors/<%= actor.id %>">
                <i class="fa fa-search-plus"></i>
            </a>
            <a href="/actors/<%= actor.id %>/edit_form/">
                <i class="fa fa-pencil"></i>
            </a>
            <a href="/actors/delete_actor/<%= actor.id %>">
                <i class="fa fa-trash"></i>
            </a>
        </div>
    </div>
    <% end %>
</div>
