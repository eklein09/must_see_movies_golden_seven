<h1> Director #<%= @current_director.id %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-11">

      <dl class="dl-horizontal">
        <dt>DOB</dt>
        <dd><%= @current_director.dob %></dd>
        <dt>Name</dt>
        <dd><%= @current_director.name %></dd>
        <dt>Bio</dt>
        <dd><%= @current_director.bio %></dd>
        <dt>Image</dt>
        <dd><img src="<%= @current_director.image_url %>" class="img-responsive" alt="Movie Image"></dd>
      </dl>


    </div>
  </div>
</div>

