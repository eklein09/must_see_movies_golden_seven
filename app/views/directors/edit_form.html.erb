<a href="/actors/">Actors</a>

<div class="container">

  <div class="page-header">
    <h1>Edit Director</h1>
  </div>

</div>

<form action="/directors/<%= @current_director.id %>/edit_row">

  <div class="form-group">
    <label for="year">DOB</label>
    <input type="text" class="form-control" id="dob" name="dob" value="<%= @current_director.dob %>">
  </div>

  <div class="form-group">
    <label for="duration">Name</label>
    <input type="number" class="form-control" id="name" name="name" value="<%= @current_director.name %>">
  </div>

  <div class="form-group">
    <label for="description">Bio</label>
    <input type="text" class="form-control" id="bio" name="bio" value="<%= @current_director.bio %>">
  </div>

  <div class="form-group">
    <label for="image_url">Image_URL</label>
    <input type="url" class="form-control" id="image_url" name="image_url" value="<%= @current_director.image_url %>">
  </div>


  <button type="submit" class="btn btn-default">Update Director</button>
</form>
