<h1>MovieDB</h1>

<a href="/directors/">Directors</a>
<a href="/movies/">Movies</a>
<a href="/actors/">Actors</a>



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Directors</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a href="/movies/new_form">Add a New Director</a>
        </div>
    </div>



    <div class="row">
        <div class="col-md-2">
            Image
        </div>
        <div class="col-md-1">
            Dob
        </div>
        <div class="col-md-1">
            Name
        </div>
        <div class="col-md-3">
            Bio
        </div>

        <div class="col-md-1">

        </div>
    </div>
    <% @list_of_directors.each do |director| %>
    <div class="row">
        <div class="col-md-2">
            <img src="<%= director.image_url %>" class="img-responsive" alt="director Image">
        </div>
        <div class="col-md-1">
            <%= director.dob %>
        </div>
        <div class="col-md-1"><%= director.name %></div>
        <div class="col-md-3"><%= director.bio %></div>
        <div class="col-md-1">
            <a href="/directors/<%= director.id %>">
                <i class="fa fa-search-plus"></i>
            </a>
            <a href="/directors/<%= director.id %>/edit_form/">
                <i class="fa fa-pencil"></i>
            </a>
            <a href="/directors/delete_director/<%= director.id %>">
                <i class="fa fa-trash"></i>
            </a>
        </div>
    </div>
    <% end %>
</div>
